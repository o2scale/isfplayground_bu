{
  "name": "playground-isf",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "build": {
    "appId": "com.vishnu.playground",
    "productName": "PlaygroundApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "backend/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "resources/nodejs",
        "to": "resources/nodejs",
        "filter": ["**/*"]
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "node_modules/**/*"
        ]
      },
      {
        "from": "resources/mongodb/bin",
        "to": "resources/mongodb/bin",
        "filter": ["**/*"]
      },
      {
        "from": "backend/db/dump",
        "to": "backend/db/dump"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    }
  },
  "scripts": {
    "start": "electron .",
    "build-react": "cd frontend && npm run build && cp -r build ../build",
    "package": "electron-builder"
  },
  "keywords": [],
  "author": "Vishnu",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "dotenv": "^16.4.7",
    "macaddress": "^0.5.3",
    "mongoose": "^8.12.1"
  }
}
