    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nodemon Launch Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/backend",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect=5858"
            ],
            "program": "${workspaceRoot}/backend/server.js",
            "restart": true,
            "port": 5000,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "inspector_async_hook.js",
                "async_hooks.js"
            ],
            // "runtimeExecutable": "/Users/office/.nvm/versions/node/v18.1.0/bin/node"
        },
    ]
}